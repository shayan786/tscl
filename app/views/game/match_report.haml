									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.boundary === 'no'
									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.boundary === 'see_comments'
									%i{class: "fa fa-check-square"}
						%tr
							%td Scorecard Usage
							%td.text-center

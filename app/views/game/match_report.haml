.row
	.col-md-8
		.card.match-report-view
			.card-header Match Report
			.card-body
				.item
					.item__label Completed by
					.item__value= @mr.get_current_user_club_acronym
				.item
					.item__label Completed on
					.item__value= @mr.updated_at.in_time_zone("Central Time (US & Canada)").strftime("%b - %e at %l:%M %p")
				.item
					.item__label Ground
					.item__value= @game.ground
				.item
					.item__label Neutral Umpire
					.item__value= @game.get_umpire_name
				.item
					.item__label Neutral Umpire Level
					.item__value= @game.get_umpire_level
				- if @mr.comments
					.item
						.item__label Comments
						.item__value= @mr.comments
				.divider
				%table.table.table-dark
					%thead
						%tr
							%th
							%th.text-center Yes
							%th.text-center No
							%th.text-center See Comments
					%tbody
						%tr
							%td Payment Before Leaving
							%td.text-center
								- if @mr.payment === 'yes'
									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.payment === 'no'
									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.payment === 'see_comments'
									%i{class: "fa fa-check-square"}
						%tr
							%td 30-Yard Circle Marking
							%td.text-center
								- if @mr.thirty_circle === 'yes'
									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.thirty_circle === 'no'
									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.thirty_circle === 'see_comments'
									%i{class: "fa fa-check-square"}
						%tr
							%td Boundary Markings
							%td.text-center

									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.scorecard === 'no'
									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.scorecard === 'see_comments'
									%i{class: "fa fa-check-square"}
						%tr
							%td Adequate ice cold portable water/drinks
							%td.text-center
								- if @mr.water === 'yes'
									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.water === 'no'
									%i{class: "fa fa-check-square"}
							%td.text-center
								- if @mr.water === 'see_comments'
									%i{class: "fa fa-check-square"}
						%tr
							%td Condition of pitch (carpet, edges, ends)
							%td.text-center
								- if @mr.pitch === 'yes'
									%i{class: "fa fa-check-square"}
							%td.text-center

.card.upcoming-matches
	.card-header Upcoming Matches
	.card-body
		- if @upcoming_games.count > 0
			%table.table.table-dark
				%thead
					%tr
						%th No.
						%th Date
						%th Home
						%th Away
						%th Umpire
				%tbody
					- @upcoming_games.each do |g|
						%tr
							%td= g.id
							%td= g.date.strftime("%b %e")
							%td= Club.find_by(id: g.home_id).acronym
							%td= Club.find_by(id: g.away_id).acronym
							%td= Club.find_by(id: g.umpire_id).acronym
		- else
			.div.empty{style: "margin-top: 5rem"}
				%i{class: "fa fa-frown-o"}
				%h4 Nothing to show here.